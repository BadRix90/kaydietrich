# ============================================
# .htaccess für kaydietrich.de
# Apache 2.4+ Configuration
# Version 1.0 - Production
# ============================================

# ============================================
# 1. HTTPS REDIRECT (Force SSL)
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect HTTP to HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]
  
  # Redirect www to non-www
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [L,R=301]
</IfModule>

# ============================================
# 2. SECURITY HEADERS
# ============================================

# X-Frame-Options: Prevent Clickjacking
<IfModule mod_headers.c>
  Header always set X-Frame-Options "SAMEORIGIN"
</IfModule>

# X-XSS-Protection: Enable Browser XSS Protection
<IfModule mod_headers.c>
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# X-Content-Type-Options: Prevent MIME-Sniffing
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Referrer-Policy: Control Referrer Information
<IfModule mod_headers.c>
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Permissions-Policy: Disable Unused Features
<IfModule mod_headers.c>
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
</IfModule>

# Content-Security-Policy (CSP)
# Angepasst für Vite Dev-Server und Google Fonts
<IfModule mod_headers.c>
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self'"
</IfModule>

# HSTS (HTTP Strict Transport Security)
# Erzwingt HTTPS für 1 Jahr
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ============================================
# 3. PERFORMANCE: GZIP COMPRESSION
# ============================================
<IfModule mod_deflate.c>
  # Compress HTML, CSS, JavaScript, Text, XML, JSON
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/atom+xml
</IfModule>

# ============================================
# 4. BROWSER CACHING (1 Jahr für statische Assets)
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # HTML (kurzes Caching für Updates)
  ExpiresByType text/html "access plus 1 hour"
  
  # Data
  ExpiresByType application/json "access plus 1 day"
  ExpiresByType application/xml "access plus 1 day"
  ExpiresByType text/xml "access plus 1 day"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
  # 1 Jahr für statische Assets
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
  </FilesMatch>
  
  # 1 Monat für CSS/JS
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
  
  # Kein Cache für HTML
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=3600, public, must-revalidate"
  </FilesMatch>
</IfModule>

# ============================================
# 5. FILE ACCESS RESTRICTIONS
# ============================================

# Deny access to .htaccess itself
<Files .htaccess>
  Order allow,deny
  Deny from all
</Files>

# Deny access to hidden files (starting with .)
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# Deny access to backup files
<FilesMatch "\.(bak|config|sql|fla|psd|log|sh)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Protect wp-config.php (if WordPress used later)
<Files wp-config.php>
  Order allow,deny
  Deny from all
</Files>

# ============================================
# 6. PHP SETTINGS (if supported by host)
# ============================================
<IfModule mod_php7.c>
  # Disable PHP in uploads directory (security)
  php_flag engine off
</IfModule>

# ============================================
# 7. ERROR PAGES (Custom 404)
# ============================================
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html

# ============================================
# 8. MIME TYPES (Ensure correct serving)
# ============================================
<IfModule mod_mime.c>
  # JavaScript
  AddType text/javascript js
  AddType application/javascript js
  
  # Fonts
  AddType font/woff woff
  AddType font/woff2 woff2
  AddType font/ttf ttf
  AddType font/otf otf
  
  # Images
  AddType image/webp webp
  AddType image/svg+xml svg svgz
  
  # Other
  AddType application/json json
  AddType application/manifest+json webmanifest
</IfModule>

# ============================================
# 9. UTF-8 ENCODING
# ============================================
AddDefaultCharset UTF-8
<IfModule mod_mime.c>
  AddCharset UTF-8 .html .css .js .xml .json .rss .atom
</IfModule>

# ============================================
# 10. DIRECTORY BROWSING (Disable)
# ============================================
Options -Indexes

# ============================================
# 11. REWRITE RULES (Clean URLs)
# ============================================
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Remove trailing slash (optional)
  # RewriteCond %{REQUEST_FILENAME} !-d
  # RewriteRule ^(.*)/$ /$1 [L,R=301]
  
  # Add trailing slash to directories
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteCond %{REQUEST_URI} !(.*)/$
  RewriteRule ^(.*)$ $1/ [L,R=301]
</IfModule>

# ============================================
# END OF .htaccess
# ============================================
